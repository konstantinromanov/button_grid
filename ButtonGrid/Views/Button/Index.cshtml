@model IEnumerable<ButtonGrid.Models.ButtonModel>


<style>
  .game-button {
    width: 74px;
    text-align: center;
  }

  .game-button-image {
    width: 70%;
  }

  .button-zone {
    display: flex;
    flex-wrap: wrap;
  }

  .line-breaker {
    flex-basis: 100%;
    height: 0;
  }

  .button-label {
    font-size: 8px;
    text-align: center;
  }
</style>

@{
  string[] imagenames = { "Blue", "Green", "Red", "Yellow" };
}

<div class="button-zone">

  @for (int i = 0; i < Model.Count(); i++)
  {
    // start a new line very five elements
    if (i % 5 == 0)
    {
      <div class="line-breaker">

      </div>
    }

    <div class="game-button">
      @*// show the proper image according to the button state property*@
      <img class="game-button-image" src="~/images/@imagenames[Model.ElementAt(i).ButtonState]-Power-Button-Icon.png" />

      <div class="button-label">
        @Model.ElementAt(i).Id , @Model.ElementAt(i).ButtonState
      </div>

    </div>

  }

</div>


