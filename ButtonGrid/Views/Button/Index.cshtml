@model IEnumerable<ButtonGrid.Models.ButtonModel>


@foreach (var item in Model)
{
  @if (item.ButtonState == 0)
  {
    <img src="~/images/Blue-Power-Button-Icon.png" width="150" />
  }
  @if (item.ButtonState == 1)
  {
    <img src="~/images/Green-Power-Button-Icon.png" width="150" />
  }
  @if (item.ButtonState == 2)
  {
    <img src="~/images/Red-Power-Button-Icon.png" width="150" />
  }
  @if (item.ButtonState == 3)
  {
    <img src="~/images/Yellow-Power-Button-Icon.png" width="150" />
  }
}
